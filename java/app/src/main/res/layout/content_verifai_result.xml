<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerifaiResultActivity"
    tools:showIn="@layout/activity_verifai_result">

        <Button
            android:id="@+id/start_liveness_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_liveness_start_text"/>

        <TextView
            android:id="@+id/mrz_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="" />

        <TextView
            android:id="@+id/first_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="" />

        <TextView
            android:id="@+id/last_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO">
        </ImageView>

</LinearLayout>